@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Neambc.Neamb.Feature.GeneralContent
@using Neambc.Neamb.Foundation.Config.Models

@model Sitecore.Mvc.Presentation.RenderingModel

<section class="loan-listing bg-gray new-design">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-left">
                @Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.Introduction, Model.Item)
            </div>
        </div>
        <div class="panel-container">
            <div class="row loan">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form>
                                <div class="row form-group">
                                    <div class="col-sm-6 col-md-6">
                                        <label for="debtType">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.LoanLabel, Model.Item) <i class="fa fa-info-circle"><span class="tooltiptext">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.LoanToolTip, Model.Item, new { @DisableWebEdit = true })</span></i></label>
                                        <input type="text" class="form-control" id="debtType" placeholder="">
                                    </div>
                                    <div class="col-sm-6 col-md-6">
                                        <label for="monthsRemaining">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.LoanMonthsLabel)</label>
                                        <div class="helper-label">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.OptionLabel)</div>
                                        <input type="number" min="1" max="9999999" step="1" class="form-control" id="monthsRemaining" placeholder="0">
                                        <span class="helper-addon">months</span>
                                    </div>
                                    <div class="col-sm-4 col-md-4">
                                        <label for="remainingBalance">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.LoanBalanceLabel)</label>
                                        <input type="number" min="1" max="10000000000" step="0.01" class="form-control balance"
                                               id="remainingBalance" placeholder="0.00">
                                        <span class="pre helper-addon">$</span>
                                    </div>
                                    <div class="col-sm-4 col-md-4">
                                        <label for="currentMonthly">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.LoanCurrentPayment)</label>
                                        <input type="number" min="1" max="10000000000" step="0.01" class="form-control monthly" id="currentMonthly" placeholder="0.00">
                                        <span class="pre helper-addon">$</span>
                                    </div>
                                    <div class="col-sm-4 col-md-4">
                                        <label for="apr">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.LoanAprLabel)</label>
                                        <input type="number" min="0" max="100" step="0.001" class="form-control apr" id="apr" placeholder="0.00">
                                        <span class="helper-addon">%</span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row loan">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form>
                                <div class="row form-group">
                                    <div class="col-sm-6 col-md-6">
                                        <label for="debtType">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.LoanLabel, Model.Item) <i class="fa fa-info-circle"><span class="tooltiptext">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.LoanToolTip, Model.Item, new { @DisableWebEdit = true })</span></i></label>
                                        <input type="text" class="form-control" id="debtType" placeholder="">
                                    </div>
                                    <div class="col-sm-6 col-md-6">
                                        <label for="monthsRemaining">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.LoanMonthsLabel)</label>
                                        <div class="helper-label">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.OptionLabel)</div>
                                        <input type="number" min="1" max="9999999" step="1" class="form-control" id="monthsRemaining" placeholder="0">
                                        <span class="helper-addon">months</span>
                                    </div>
                                    <div class="col-sm-4 col-md-4">
                                        <label for="remainingBalance">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.LoanBalanceLabel)</label>
                                        <input type="number" min="1" max="10000000000" step="0.01" class="form-control balance"
                                               id="remainingBalance" placeholder="0.00">
                                        <span class="pre helper-addon">$</span>
                                    </div>
                                    <div class="col-sm-4 col-md-4">
                                        <label for="currentMonthly">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.LoanCurrentPayment)</label>
                                        <input type="number" min="1" max="10000000000" step="0.01" class="form-control monthly" id="currentMonthly" placeholder="0.00">
                                        <span class="pre helper-addon">$</span>
                                    </div>
                                    <div class="col-sm-4 col-md-4">
                                        <label for="apr">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.LoanAprLabel)</label>
                                        <input type="number" min="0" max="100" step="0.001" class="form-control apr" id="apr" placeholder="0.00">
                                        <span class="helper-addon">%</span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <button type="button" class="add-panel btn-link">+ @Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.AddLoanLink)</button>
        </div>
    </div>
    <div class="sum-container">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-md-4">
                    <div class="card remaining-balance">
                        <img src="@Model.Item.ImageUrl(Templates.DebtConsolidationCalculator.Fields.TotalLoanIcon)" alt="">
                        <h6>@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.TotalLoanHeadline)</h6>
                        <h2>$<span>0.00</span></h2>
                        <span class="disclaimer">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.TotalLoanDescription)</span>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4">
                    <div class="card monthly-payments">
                        <img src="@Model.Item.ImageUrl(Templates.DebtConsolidationCalculator.Fields.TotalMonthlyIcon)" alt="">
                        <h6>@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.TotalMonthlyHeadline)</h6>
                        <h2>$<span>0.00</span></h2>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4">
                    <div class="card average-apr">
                        <img src="@Model.Item.ImageUrl(Templates.DebtConsolidationCalculator.Fields.AverageAprIcon)" alt="">
                        <h6>@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.AverageAprHeadline)</h6>
                        <h2><span>0</span>%</h2>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12">
                    <button type="button" class="btn btn-blue explore-options">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.ExploreButton)</button>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="saving-options">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-left">
                @Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.ExploreOptionsDescription)
            </div>
        </div>
        <div class="row calculations">
            <div class="col-md-6">
                <div class="apr">
                    <div class="apr-slider">
                        <h6>@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.ExploreOptionsAprLabel)</h6>
                        <input type="range" min="0" max="30" value="15" id="apr-range">
                        <div class="slider-value">
                            <span>15%</span>
                        </div>
                    </div>
                    <div class="loan-terms">
                        <h6>@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.ExploreOptionsTermsLabel)</h6>
                        <button type="button">36</button>
                        <button type="button" class="selected">48</button>
                        <button type="button">60</button>
                        <button type="button">72</button>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="payment-vs">
                    <div class="first-payment">
                        <div class="text-label">
                            @Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.ExploreOptionsEstimatedCostLabel) <i class="fa fa-info-circle"><span class="tooltiptext">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.ExploreOptionsEstimatedCostToolTip, Model.Item, new { @DisableWebEdit = true })</i>
                        </div>
                        <h2>$<span>0.00</span></h2>
                        <div class="vs-container">
                            <div class="circle">
                                <span>VS</span>
                            </div>
                        </div>
                    </div>
                    <div class="second-payment">
                        @Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.ExploreOptionsCurrentPaymentLabel)
                        <h2>$<span>0.00</span></h2>
                    </div>
                    <p class="fine-print">@Html.Sitecore().Field(Templates.DebtConsolidationCalculator.Fields.ExploreOptionsFooterNote) </p>
                </div>
            </div>
        </div>
    </div>
</section>
