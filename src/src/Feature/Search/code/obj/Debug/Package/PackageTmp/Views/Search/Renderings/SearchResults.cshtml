@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Neambc.Seiumb.Feature.Search
@model Neambc.Seiumb.Feature.Search.Models.SearchResultModel
@{
    var siteSettings = Sitecore.Context.Database.GetItem(Templates.SiteSettingsGlobal.ID);
    var searchText = siteSettings[Templates.SiteSettings.Fields.SearchText];
}

<section id="search_result">
    <div id="mainSearch" class="row">
        <div id="mainSearch" class="row">
            <div class="medium-4 large-4 columns">
                &nbsp;
            </div>
            <div class="medium-4 large-4 columns">
                <form id="searchForm">
                    <div class="input-group">
                        <input id="searchField" class="input-group-field" type="text" placeholder="@searchText">
                        <span id="searchButton" class="input-group-label"> <a class="icon-search"></a></span>
                    </div>
                </form>

            </div>
            <div class="medium-4 large-4 columns">
                &nbsp;
            </div>
        </div>
    </div>


    <div id="results_count" class="row">
        <div class="show-for-medium medium-1 large-1 columns">
            &nbsp;
        </div>
        <div class="small-12 medium-10 large-10 columns float-center">
            <span></span>
            <hr>
            <div class="row">
            </div>
        </div>
        <div class="show-for-medium medium-1 large-1 columns">
            &nbsp;
        </div>
    </div>
    <div id="search_results">

    </div>


</section>

<section>

    <div id="paginationElement" class="row">
    </div>

</section>

<div id="searchMessages" style="display:none;">
    <div id="show">@Html.Sitecore().Field(Templates.SearchResult.Fields.Title, Model.ContextItem)</div>
    <div id="sorry">@Html.Sitecore().Field(Templates.SearchResult.Fields.NoResultsMessage, Model)</div>
    <div id="noResults">@Html.Sitecore().Field(Templates.SearchResult.Fields.NoResultsTitle, Model)</div>
    <div id="next">@Html.Sitecore().Field(Templates.SearchResult.Fields.NextPage, Model)</div>
    <div id="youAre">@Html.Sitecore().Field(Templates.SearchResult.Fields.CurrentPage, Model)</div>
    <div id="previous">@Html.Sitecore().Field(Templates.SearchResult.Fields.PreviousPage, Model)</div>
    <div id="page">@Html.Sitecore().Field(Templates.SearchResult.Fields.Page, Model)</div>
</div>
