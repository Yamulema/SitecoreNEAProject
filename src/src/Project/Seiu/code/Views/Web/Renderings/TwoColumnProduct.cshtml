@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Neambc.Seiumb.Project.Web
@model Sitecore.Mvc.Presentation.RenderingModel
<div id="product_details_content" class="row">
    @Html.Sitecore().Placeholder("left-column")
    @if (Model.Item.IsDerived(Templates.TwoColumnMiscellaneousPageType.ID) || Model.Item.IsDerived(Templates.TwoColumnListPageType.ID))
    {
        @Html.Sitecore().Placeholder("right-column")

    }
    else
    {
        <div id="product_details_main" class="small-12 medium-8 large-8 columns float-right">
            @Html.Sitecore().Placeholder("right-column")
        </div>
    }

    <div id="left-rail-content" class="small-12 medium-4 large-4 columns float-left">
        @Html.Sitecore().Placeholder("left-column-card")
    </div>
</div>