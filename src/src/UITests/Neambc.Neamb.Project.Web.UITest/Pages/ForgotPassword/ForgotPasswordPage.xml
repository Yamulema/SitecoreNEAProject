<?xml version="1.0" encoding="utf-8" ?>
<controldata>
  <pages>
    <page name="ForgotPasswordPage" urlpath="/account/forgot-email">
      <sections>
        <section name="Header">
          <controls>
            <control key="ForgotPasswordPage_Header_Title" xpath="//h1[@class='header']"  />
            <control key="ForgotPasswordPage_Header_SubTitle" xpath="//p[@class='subhead text-alpha no-margin-auto']"  />
          </controls>
        </section>
        <section name="Form">
          <controls>
            <control key="ForgotPasswordPage_Form_Email" xpath="//input[@id='email']"  />
            <control key="ForgotPasswordPage_Form_RequestResetLink" xpath="//input[@id='submit']"  />
            <control key="ForgotPasswordPage_Form_ReturnToSignIn" xpath="//a[contains(text(),'Return to Sign In')]"  />
          </controls>
        </section>
      </sections>
    </page>
  </pages>
</controldata>